                    "log": true
                },
                {
                    "name": "fixed-price-agent",
                    "root": ".",
                    "path": "build/x86_64/bin/bidding_agent_ex",
                    "arg": [
                        "-N", "st2.agent",
                        "-B", "rtbkit/sample.bootstrap.json"
                    ],
                    "log": true
                }
            ]
        },
        {
            "name": "st3",
            "root": ".",
            "tasks": [
                {
                    "name": "router",
                    "root": ".",
                    "path": "build/x86_64/bin/router_runner",
